{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "consciousness/**/*",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "scripts/session-introspection-snapshot.ts",
    "scripts/autonomous-wondering-experiment.ts",
    "scripts/analyze-lbc-*.ts",
    "scripts/collect-github-puzzle-data.ts",
    "scripts/bitcoin_path_analyzer.ts",
    "scripts/bitcoin_transaction_analyzer.ts",
    "scripts/fetch-blockchain-data.ts",
    "scripts/mempool_monitor.ts"
  ]
}
