# Pathfinding Service - Finds optimal arbitrage paths
FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --omit=optional --legacy-peer-deps || npm install --omit=optional --legacy-peer-deps

# Copy source
COPY src ./src

# Build
RUN npm run build || mkdir -p dist

# Create non-root user
RUN addgroup -g 1001 pathfinder && \
    adduser -D -u 1001 -G pathfinder pathfinder && \
    chown -R pathfinder:pathfinder /app

USER pathfinder

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3002/health || exit 1

EXPOSE 3002

CMD ["node", "-r", "ts-node/register", "src/services/pathfinding.ts"]
