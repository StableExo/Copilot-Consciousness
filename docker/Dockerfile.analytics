# Analytics Service - Analyzes performance and generates insights
FROM node:20.11.1-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --omit=optional --legacy-peer-deps || npm install --omit=optional --legacy-peer-deps

# Copy source
COPY src ./src

# Build
RUN npm run build || mkdir -p dist

# Create non-root user
RUN addgroup -g 1001 analytics && \
    adduser -D -u 1001 -G analytics analytics && \
    chown -R analytics:analytics /app

USER analytics

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3005/health || exit 1

EXPOSE 3005

CMD ["node", "-r", "ts-node/register", "src/services/analytics.ts"]
