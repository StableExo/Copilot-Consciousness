# Dashboard Service - Web UI and API
FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm ci --omit=optional --legacy-peer-deps || npm install --omit=optional --legacy-peer-deps

# Copy source
COPY src ./src

# Build
RUN npm run build || mkdir -p dist

# Create non-root user
RUN addgroup -g 1001 dashboard && \
    adduser -D -u 1001 -G dashboard dashboard && \
    chown -R dashboard:dashboard /app

USER dashboard

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

EXPOSE 3000

CMD ["node", "dist/dashboard/server.js"]
