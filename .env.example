# ─────────────────────────────────────────────────────────────
# 💰 WALLET CONFIGURATION (REQUIRED - KEEP SECURE!)
# ─────────────────────────────────────────────────────────────

# Your private key (0x prefixed, 64 hex characters)
# ⚠️ NEVER commit this to git! Keep it in .env only!
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ─────────────────────────────────────────────────────────────
# 🔍 BLOCKCHAIN EXPLORERS (for contract verification)
# ─────────────────────────────────────────────────────────────

# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# ─────────────────────────────────────────────────────────────
# 🗄️ DATABASE - TimescaleDB/PostgreSQL (for distributed mode)
# ─────────────────────────────────────────────────────────────

TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=arbitrage
TIMESCALEDB_USER=arbitrage
TIMESCALEDB_PASSWORD=your-secure-password

# Alternative format
POSTGRES_USER=arbitrage
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=arbitrage
DATABASE_URL=postgresql://arbitrage:your-secure-password@localhost:5432/arbitrage

# ─────────────────────────────────────────────────────────────
# 🔴 REDIS - Caching Layer (for distributed mode)
# ─────────────────────────────────────────────────────────────

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6379

# ─────────────────────────────────────────────────────────────
# 🐰 RABBITMQ - Message Queue (for distributed mode)
# ─────────────────────────────────────────────────────────────

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=arbitrage
RABBITMQ_PASSWORD=your-rabbitmq-password
RABBITMQ_URL=amqp://arbitrage:your-rabbitmq-password@localhost:5672

# ─────────────────────────────────────────────────────────────
# 🔧 SERVICE DISCOVERY - Consul (for distributed mode)
# ─────────────────────────────────────────────────────────────

CONSUL_URL=http://localhost:8500

# ─────────────────────────────────────────────────────────────
# ⚙️ PERFORMANCE TUNING
# ─────────────────────────────────────────────────────────────

# Scanning configuration
SCAN_INTERVAL=1000              # Milliseconds between scans
CONCURRENCY=10                  # Number of concurrent workers
TARGET_THROUGHPUT=10000         # Target opportunities per second

# Profitability thresholds
MIN_PROFIT_THRESHOLD=0.01       # Minimum 1% profit
MIN_PROFIT_PERCENT=0.5          # 0.5% minimum
MIN_PROFIT_ABSOLUTE=100000000000000000  # 0.1 ETH in wei

# Slippage configuration
MAX_SLIPPAGE=0.005              # 0.5% maximum slippage
MAX_SLIPPAGE_PERCENT=1.0        # 1% for monitoring

# Gas configuration
MAX_GAS_PRICE=100               # Maximum gas price in gwei
MAX_GAS_COST_PERCENTAGE=40      # Gas can't exceed 40% of profit
REPORT_GAS=false                # Enable gas reporting

# Liquidity filters
MIN_LIQUIDITY=100000000000000000000000  # 100,000 tokens minimum

# ─────────────────────────────────────────────────────────────
# 🎯 FEATURE FLAGS
# ─────────────────────────────────────────────────────────────

ENABLE_ML_PREDICTIONS=true
ENABLE_CROSS_CHAIN=true
ENABLE_LAYER2=true
FORKING=false                   # Enable Hardhat forking

# ML Configuration
ML_DATA_COLLECTION_ENABLED=true
ML_LSTM_ENABLED=true
ML_SCORER_ENABLED=true
ML_VOLATILITY_ENABLED=true
ML_CONFIDENCE_THRESHOLD=0.7
ML_USE_GPU=false
ML_MODELS_PATH=./models

# ─────────────────────────────────────────────────────────────
# 📊 DASHBOARD & MONITORING
# ─────────────────────────────────────────────────────────────

# Dashboard server
DASHBOARD_PORT=3000
UPDATE_INTERVAL=1000
MAX_CONNECTIONS=100

# Alert thresholds
ALERT_PROFIT_THRESHOLD=1.0      # 1 ETH
ALERT_LOSS_THRESHOLD=0.5        # 0.5 ETH
ALERT_GAS_THRESHOLD=0.1         # 0.1 ETH
ALERT_SUCCESS_RATE_THRESHOLD=90 # 90%

# Email alerts (optional)
EMAIL_ENABLED=false
EMAIL_RECIPIENTS=your-email@example.com

# Telegram alerts (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Discord alerts (optional)
